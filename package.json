{
    "name": "liora",
    "version": "9.0.0",
    "description": "Modern WhatsApp bot",
    "keywords": [
        "whatsapp",
        "baileys",
        "nodejs",
        "automation"
    ],
    "type": "module",
    "private": false,
    "engines": {
        "node": ">=24.0.0"
    },
    "scripts": {
        "start": "node --expose-gc --max-old-space-size=4096 --trace-warnings --trace-deprecation ./src/index.js"
    },
    "license": "Apache-2.0",
    "author": {
        "name": "Naruya Izumi",
        "url": "https://linkbio.co/naruyaizumi"
    },
    "dependencies": {
        "@napi-rs/canvas": "^0.1.84",
        "async-mutex": "^0.5.0",
        "audio-decode": "^2.2.3",
        "baileys": "^7.0.0-rc.9",
        "better-sqlite3": "^12.5.0",
        "chokidar": "^5.0.0",
        "dotenv": "^17.2.3",
        "file-type": "^21.1.1",
        "lru-cache": "^11.2.4",
        "p-queue": "^9.0.1",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3",
        "sharp": "^0.34.5"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "eslint": "^9.39.2",
        "globals": "^16.5.0",
        "node-addon-api": "^8.5.0",
        "node-gyp": "^12.1.0",
        "prettier": "^3.7.4"
    },
    "imports": {
        "#tiktok": "./lib/api/tiktok.js",
        "#instagram": "./lib/api/instagram.js",
        "#twitter": "./lib/api/twitter.js",
        "#threads": "./lib/api/threads.js",
        "#play": "./lib/api/play.js",
        "#spotify": "./lib/api/spotify.js",
        "#ytmp3": "./lib/api/ytmp3.js",
        "#ytmp4": "./lib/api/ytmp4.js",
        "#spotifydl": "./lib/api/spotifydl.js",
        "#removebg": "./lib/api/removebg.js",
        "#remini": "./lib/api/remini.js",
        "#config": "./src/config.js",
        "#global": "./src/global.js",
        "#message": "./lib/core/message.js",
        "#socket": "./lib/core/socket.js",
        "#connection": "./lib/core/connection.js",
        "#add-on": "./lib/cpp/bridge-async.js",
        "#auth": "./lib/auth/sqlite-auth.js"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "quoteProps": "as-needed",
        "jsxSingleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "bracketSameLine": false,
        "arrowParens": "always",
        "endOfLine": "lf",
        "proseWrap": "preserve",
        "htmlWhitespaceSensitivity": "css",
        "embeddedLanguageFormatting": "auto"
    }
}
