{
    "name": "liora",
    "version": "7.4.8",
    "description": "Liora is a modern, modular, and efficient WhatsApp bot framework built on Baileys.",
    "keywords": [
        "whatsapp",
        "whatsapp-bot",
        "bot-framework",
        "automation",
        "baileys",
        "nodejs",
        "liora"
    ],
    "type": "module",
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "start": "node ./src/index.js",
        "test": "node ./src/test.js",
        "format": "prettier --write .",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/naruyaizumi/liora.git"
    },
    "bugs": {
        "url": "https://github.com/naruyaizumi/liora/issues"
    },
    "homepage": "https://github.com/naruyaizumi/liora#readme",
    "author": {
        "name": "Naruya Izumi",
        "url": "https://linkbio.co/naruyaizumi"
    },
    "dependencies": {
        "async-mutex": "^0.5.0",
        "awesome-phonenumber": "^7.5.0",
        "baileys": "^7.0.0-rc.6",
        "better-sqlite3": "^12.4.1",
        "canvas": "^3.2.0",
        "cheerio": "^1.1.2",
        "file-type": "^21.0.0",
        "liora-lib": "^1.2.12",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.2",
        "sharp": "^0.34.4"
    },
    "devDependencies": {
        "@eslint/js": "^9.38.0",
        "eslint": "^9.38.0",
        "globals": "^16.4.0",
        "prettier": "^3.6.2"
    },
    "peerDependencies": {
        "audio-decode": "^2.2.3",
        "link-preview-js": "^3.1.0"
    },
    "peerDependenciesMeta": {
        "audio-decode": {
            "optional": true
        },
        "link-preview-js": {
            "optional": true
        }
    },
    "imports": {
        "#tiktok": "./lib/api/tiktok.js",
        "#removebg": "./lib/api/removebg.js",
        "#remini": "./lib/api/remini.js"
    },
    "packageManager": "pnpm@10.20.0",
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "endOfLine": "lf",
        "bracketSameLine": false,
        "overrides": [
        {
            "files": "*.js",
            "options": {
                "commentPreserveAll": true
            }
        }]
    }
}