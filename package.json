	"prettier": {
		"printWidth": 100,
		"tabWidth": 4,
		"useTabs": false,
		"semi": true,
		"singleQuote": false,
		"quoteProps": "as-needed",
		"jsxSingleQuote": false,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "always",
		"endOfLine": "lf",
		"proseWrap": "preserve",
		"htmlWhitespaceSensitivity": "css",
		"embeddedLanguageFormatting": "auto"
