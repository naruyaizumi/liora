{
    "name": "liora",
    "version": "7.6.5",
    "description": "Liora is a modern, modular, and efficient WhatsApp bot built on Baileys.",
    "keywords": [
        "whatsapp",
        "automation",
        "baileys",
        "bun"
    ],
    "type": "module",
    "engines": {
        "bun": ">=1.3.2"
    },
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint . --ext .js",
        "lint:fix": "eslint . --ext .js --fix",
        "build:cpp": "node-gyp configure build",
        "build:rs": "cd lib/rs && cargo build --release"
    },
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/naruyaizumi/liora.git"
    },
    "bugs": {
        "url": "https://github.com/naruyaizumi/liora/issues"
    },
    "homepage": "https://github.com/naruyaizumi/liora#readme",
    "author": {
        "name": "Naruya Izumi",
        "url": "https://linkbio.co/naruyaizumi"
    },
    "dependencies": {
        "async-mutex": "^0.5.0",
        "baileys": "github:naruyaizumi/baileys",
        "chokidar": "^5.0.0",
        "eventemitter3": "^5.0.1",
        "file-type": "^21.0.0",
        "p-queue": "^9.0.1",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.2",
        "sharp": "^0.34.4",
        "yt-search": "^2.13.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "eslint": "^9.39.1",
        "globals": "^16.5.0",
        "node-addon-api": "^8.5.0",
        "node-gyp": "^12.0.0",
        "prettier": "^3.6.2"
    },
    "imports": {
        "#tiktok": "./lib/api/tiktok.js",
        "#instagram": "./lib/api/instagram.js",
        "#twitter": "./lib/api/twitter.js",
        "#threads": "./lib/api/threads.js",
        "#play": "./lib/api/play.js",
        "#spotify": "./lib/api/spotify.js",
        "#ytmp3": "./lib/api/ytmp3.js",
        "#ytmp4": "./lib/api/ytmp4.js",
        "#spotifydl": "./lib/api/spotifydl.js",
        "#removebg": "./lib/api/removebg.js",
        "#remini": "./lib/api/remini.js",
        "#config": "./src/config.js",
        "#global": "./src/global.js",
        "#message": "./lib/core/message.js",
        "#socket": "./lib/core/socket.js",
        "#connection": "./lib/core/connection.js",
        "#add-on": "./lib/cpp/bridge-async.js",
        "#auth": "./lib/auth/auth.js"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "endOfLine": "lf",
        "bracketSameLine": false,
        "overrides": [
            {
                "files": "*.js",
                "options": {
                    "commentPreserveAll": true
                }
            }
        ]
    },
    "trustedDependencies": [
        "baileys",
        "protobufjs",
        "sharp"
    ]
}
