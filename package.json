{
    "name": "liora",
    "version": "9.1.2",
    "description": "Liora WhatsApp bot built on Baileys.",
    "keywords": [
        "whatsapp",
        "baileys",
        "nodejs",
        "automation"
    ],
    "type": "module",
    "scripts": {
        "start": "node ./src/index.js"
    },
    "license": "Apache-2.0",
    "author": {
        "name": "Naruya Izumi",
        "url": "https://linkbio.co/naruyaizumi"
    },
    "dependencies": {
        "@napi-rs/canvas": "^0.1.86",
        "async-mutex": "^0.5.0",
        "audio-decode": "^2.2.3",
        "baileys": "^7.0.0-rc.9",
        "chokidar": "^5.0.0",
        "dotenv": "^17.2.3",
        "file-type": "^21.2.0",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3",
        "sharp": "^0.34.5"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "eslint": "^9.39.2",
        "globals": "^16.5.0",
        "node-addon-api": "^8.5.0",
        "node-gyp": "^12.1.0",
        "prettier": "^3.7.4"
    },
    "imports": {
        "#api/*": "./src/lib/api/*",
        "#auth/*": "./src/lib/auth/*",
        "#canvas/*": "./src/lib/canvas/*",
        "#core/*": "./src/lib/core/*",
        "#cpp": "./src/lib/cpp/bridge.js",
        "#lib/*": "./src/lib/*"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "quoteProps": "as-needed",
        "jsxSingleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "bracketSameLine": false,
        "arrowParens": "always",
        "endOfLine": "lf",
        "proseWrap": "preserve",
        "htmlWhitespaceSensitivity": "css",
        "embeddedLanguageFormatting": "auto"
    }
}