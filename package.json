		"async-mutex": "^0.5.0",
		"baileys": "^7.0.0-rc.9",
		"better-sqlite3": "^12.5.0",
		"chokidar": "^5.0.0",
		"file-type": "^21.0.0",
		"lru-cache": "^11.2.4",
		"p-queue": "^9.0.1",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.2",
		"sharp": "^0.34.4",
		"yt-search": "^2.13.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"eslint": "^9.39.1",
